pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/amudhavan13/devops_project.git'
            }
        }

        stage('Run Tests') {
            steps {
                sh './test.sh'
            }
        }
    }

    post {
        success {
            echo 'ğŸ‰ CI Passed! Code is clean and buildable!'
        }
        failure {
            echo 'âŒ CI Failed. Check the logs for details.'
        }
    }
}
